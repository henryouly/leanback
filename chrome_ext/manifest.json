{
  "manifest_version": 2,

  "name": "Leanback",
  "description": "Play videos on your Android TV box",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "background": {"page": "background.html"}
}
